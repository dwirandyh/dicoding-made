<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dwirandyh.sqlite">

    <permission
        android:name="com.dwirandyh.sqlite.READ_DATABASE"
        android:protectionLevel="normal" />
    <permission
        android:name="com.dwirandyh.sqlite.WRITE_DATABASE"
        android:protectionLevel="normal" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <provider
            android:name=".provider.NoteProvider"
            android:authorities="com.dwirandyh.sqlite"
            android:enabled="true"
            android:exported="true"
            android:readPermission="com.dwirandyh.sqlite.READ_DATABASE"
            android:writePermission="com.dwirandyh.sqlite.WRITE_DATABASE" />

        <activity android:name=".NoteAddUpdateActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>